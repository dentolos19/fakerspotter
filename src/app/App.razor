<Router AppAssembly="typeof(Program).Assembly" PreferExactMatches="true">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(AppLayout)"/>
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(AppLayout)">
            <Container TextAlignment="TextAlignment.Center">
                <Heading Size="HeadingSize.Is3">404</Heading>
                <Paragraph>Sorry, there's nothing at this address.</Paragraph>
            </Container>
        </LayoutView>
    </NotFound>
</Router>