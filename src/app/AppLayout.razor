@inherits LayoutComponentBase

@inject UserService UserService

<Layout>
    <LayoutHeader>
        <Bar Breakpoint="Breakpoint.Desktop">
            <BarBrand>
                <Figure Size="FigureSize.Is32x32">
                    <FigureImage Source="images/icon.png"/>
                </Figure>
                FakerSpotter
            </BarBrand>
            <BarToggler/>
            <BarMenu>
                <BarStart>
                    <BarItem>
                        <BarLink To="">Home</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="leaderboard">Leaderboard</BarLink>
                    </BarItem>
                </BarStart>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent>
        <Steps>
            <Items>
                <Step Name="start" Color="Color.Primary" Completed="true">
                    <Marker>
                        <Icon Name="IconName.Home"/>
                    </Marker>
                    <Caption>
                        Start
                    </Caption>
                </Step>
                <Step Name="room1" Index="1" Color="Color.Success" Completed="UserService.IsRoomOneCompleted">Room 1</Step>
                <Step Name="room2" Index="2" Color="Color.Warning" Completed="UserService.IsRoomTwoCompleted">Room 2</Step>
                <Step Name="room3" Index="3" Color="Color.Danger" Completed="UserService.IsRoomThreeCompleted">Room 3</Step>
                <Step Name="finish" Color="Color.Primary" Completed="UserService.IsRoomOneCompleted && UserService.IsRoomTwoCompleted && UserService.IsRoomThreeCompleted">
                    <Marker>
                        <Icon Name="IconName.Flag"/>
                    </Marker>
                    <Caption>
                        Finish
                    </Caption>
                </Step>
            </Items>
            <Content>
                <Row>
                    <Column/>
                    <Column ColumnSize="ColumnSize.Is10">
                        @Body
                    </Column>
                    <Column/>
                </Row>
            </Content>
        </Steps>
    </LayoutContent>
</Layout>